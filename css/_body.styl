.body
    display flex
    background url(./img/noise.png) repeat

    .groovy-inputs, .groovy-outputs
        flex-basis 50%
        padding 2vw
        box-sizing border-box
        
    .groovy-inputs
        
        input, textarea, span.helper
            display block
            width 100%
        
        input, textarea
            background-color groovyCream
            border 3px solid groovyMaroon
            border-radius 10px
            padding 5px 10px
            box-sizing border-box

        span.helper
            margin-bottom 1em
            color groovyCream
            text-shadow 2px 2px 1px groovyMaroon
