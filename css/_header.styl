header
    display flex

    .groovy-title
        width 40%
        
        h1
            text-align center
            transform rotate(-15deg)
            line-height 1
            color groovyOrange
            text-shadow: 2px 4px 0 groovyMaroon, 4px 0px 0px groovyCream, 2px -2px 0 groovyCream
            
            
            span
                display block
                font-size 1.8rem
                color groovyYellow
                text-shadow: 2px 2px 2px groovyMaroon
    
    .groovy-desc
        align-self center
        padding 5%